{% extends 'layout.twig' %}

{% block body %}
    <h1 class="spacing-bottom--3">{{title}}</h1>
    <div class="stats">
        <h4><strong>Last.fm user</strong>: {{ app().user }}</h4>
        <p><strong>Time Period</strong>: 12 months</p>
    </div>
    {% if (data.topartists.artist) %}
        <ul class="list-unstyled">
        {% for artist in data.topartists.artist %}
            <li class="mc-item">
                <a href="/artists/{{ slugify(artist.name) }}" class="mc-item__img">
                    <div class="mc-item__img__overlay"></div>
                {% if (artist.image[2]['#text']) %}
                    <img width="174" height="174" src="{{ artist.image[2]['#text'] }}" alt="">
                {% else %}
                    <img width="174" height="174"  src="/images/default_artist.jpg" alt="">
                {% endif %}
                </a>
                <h4><a href="/artists/{{ slugify(artist.name) }}">{{ artist.name }}</a></h4>
            </li>
        {% endfor %}
        </ul>
    {% else %}
    {% endif %}
{% endblock %}
